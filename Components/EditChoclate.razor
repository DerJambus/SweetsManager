<div class="modal fade show d-block" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Schokolade bearbeiten</h4>
                <button class="close"
                        type="button"
                        data-dismiss="modal"
                        aria-label="Close"
                        @onclick="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@Choc" OnValidSubmit="@HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-group">
                        <label for="name">
                            Name:
                        </label>
                        <InputText id="name"
                                   class="form-control"
                                   placeholder="Name der Schokolade"
                                   @bind-Value="@Choc._name">
                        </InputText>
                        <ValidationMessage For="@(()=>Choc._name)" />

                    </div>

                    <div class="form-group">
                        <label for="vendor">
                            Hersteller:
                        </label>
                        <InputText id="vendor"
                                   class="form-control"
                                   placeholder="Hersteller"
                                   @bind-Value="@Choc._vendor">
                        </InputText>
                        <ValidationMessage For="@(()=>Choc._vendor)" />

                    </div>
                    <div class="form-group">
                        <label for="ccr">
                            Kakaoanteil in %:
                        </label>
                        <InputNumber id="ccr"
                                     class="form-control"
                                     placeholder="Kakaoanteil in %"
                                     @bind-Value="@Choc._radeOfCacao">
                        </InputNumber>
                        <ValidationMessage For="@(()=>Choc._radeOfCacao)" />

                    </div>
                    <div class="form-group">
                        <label for="tooSweet">
                            Schmeckt sehr Süß:
                        </label>
                        <InputCheckbox id="tooSweet"
                                       class="form-control"
                                       @bind-Value="@Choc._isToSweet">
                        </InputCheckbox>
                        <ValidationMessage For="@(()=>Choc._isToSweet)" />
                    </div>
                    <button type="submit" class=" btn btn-success">Speichern</button>
                    <button @onclick="@Close" class="btn btn-danger">Abbrechen</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>
